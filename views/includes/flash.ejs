<% if(success && success.length) {%>
    <div class="alert alert-info alert-dismissible fade show mt-1 mb-1" role="alert" style="width:fit-content; display:flex; justify-self:center;">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
 
<% if(error && error.length) {%>
    <div class="alert alert-danger alert-dismissible fade show mt-1 mb-1" role="alert" style="width:fit-content; display:flex; justify-self:center;">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>