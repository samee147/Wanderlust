<% layout("/layouts/boilerplate") -%>
<script src="https://apis.mappls.com/advancedmaps/api/<%=mapTokenKey%>/map_sdk?v=3.0&layer=vector"></script>
<body>
    <br>
    <h2>Listing Details</h2>
    <div class="row mt-3">
        <div class="col-12 col-md-6 ">
            <img class="show-img" src="<%= listing.image.url %>"/>
        </div>
        
        <div class="col-12 col-md-6 mt-3 mb-3">
            <h4><%=listing.title%></h4>
            <p><i>owned by <%= listing.owner.username %></i></p>
            <p><i><%=listing.description %></i></p>
            <p>&#x20B9;<%= listing.price.toLocaleString("en-IN") %></p>
            <p><%= listing.location %></p>
            <p><%= listing.country %></p>
            <br>
            
            <div class="row">
                <div class="col-3">
                    <a href="/listings/<%=listing._id%>/edit" class="edit-btn btn text-white" style="width:100%; display:inline-block; text-align:center;">Edit</a>
                </div>
                <div class="col-3">
                <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
                    <button class="btn btn-dark" style="width:100%">Delete</button>
                </form>
                </div>
            </div>
            
        </div>
    </div>
    <hr/>
    <div class="row mt-5 mb-3">
        <div class="col-12 col-md-6 review">
            <h3>where you will be-</h3>
            <div id="map"></div>
            <%if(currUser){%>
            <form action="/listings/<%=listing._id%>/review" method="POST" novalidate class="needs-validation">
                <div>
                    <h4>Leave a Review</h4>
                    <p>Rating:</p>
                    <fieldset class="starability-checkmark">
                        <!-- <legend>rating:</legend> -->
                        <input type="radio" id="first-rate0" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                </div>
                <div class="mb-3">
                    <label for="comment" class="form-label">Comment</label>
                    <textarea id="comment" name="review[comment]" class="form-control" required></textarea>
                    <div class="invalid-feedback">atleast a short comment is required</div>
                </div>
                <button type="submit" class="btn btn-outline-dark">Submit</button>
            </form>
            <%}%>
            <br>
            <h4>All Reviews</h4>
            <div class="row">
            <% for(review of listing.reviews) {%>
                <div class="col-6" style="padding:0px 8px 8px 0px;">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><%=review.author.username%></h5>
                        <p class="starability-result" data-rating=<%=review.rating%>></p>
                        <h6 class="card-subtitle mb-2 text-body-secondary"><%=review.comment%></h6>
                        <% if(currUser && currUser.equals(review.author)){%>
                        <form method="POST" action="/listings/<%=listing._id%>/review/<%=review._id%>?_method=DELETE">
                            <button class="btn btn-outline-dark">delete</button>
                        </form>
                        <%}%>
                    </div>
                </div>
                </div>
            <% } %>
            </div>
        </div>
    </div>
    <script src="/js/map.js"></script>
</body>
